<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myactivity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyActivity">

        <service
            android:name=".utils.GameMusic"
            android:enabled="true" />
        <service
            android:name=".utils.GamePlayMusic"
            android:enabled="true" />

        <activity android:name=".ui.play.ChooseGameActivity" />
        <activity android:name=".ui.rival.RivalActivity" />
        <activity android:name=".ui.editprofile.EditProfile" />
        <activity android:name=".ui.chatbot.ChatBotActivity" />
        <activity android:name=".ui.history.HistoryActivity" />
        <activity android:name=".ui.Friends.FriendsActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.splash.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.menu.MenuActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.play.versusplayer.PemainPemainActivity">

        </activity>
        <activity android:name=".ui.play.versuscpu.PemainCpuActivity" />
        <activity android:name=".ui.login.LoginActivity" />
